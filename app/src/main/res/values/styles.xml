<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyTopBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?myPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="MyTopBarTv" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:textColor">?myOnPrimary</item>
        <item name="android:textSize" tools:ignore="SpUsage">21dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyBackBtn" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_primary</item>
        <item name="android:contentDescription">@string/back_description</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="PrayerDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/prayer_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/prayer_dialog_hide</item>
    </style>

    <style name="QuranSettingsDialogAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/quran_settings_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/quran_settings_dialog_hide</item>
        <item name="android:activityOpenEnterAnimation">@anim/quran_settings_dialog_show</item>
        <item name="android:activityOpenExitAnimation">@anim/quran_settings_dialog_hide</item>
        <item name="android:activityCloseEnterAnimation">@anim/quran_settings_dialog_show</item>
        <item name="android:activityCloseExitAnimation">@anim/quran_settings_dialog_hide</item>
    </style>

    <style name="Buttony" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
        <item name="fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="RoundedDialogM" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
        <item name="myMainBg">@color/bg_M</item>
        <item name="mySurface">@color/surface_M</item>
        <item name="mySurfaceDark">@color/ripple_M</item>
        <item name="myAccent">@color/accent_M</item>
    </style>

    <style name="RoundedDialogL" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
        <item name="android:textColorSecondary">?myAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?myAccent</item>
        <item name="colorAccent">?myAccent</item>
        <item name="myMainBg">@color/bg_L</item>
        <item name="mySurface">@color/surface_L</item>
        <item name="mySurfaceDark">@color/ripple_L</item>
        <item name="myAccent">@color/accent_L</item>
    </style>

    <style name="PrayerCard" parent="Base.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/prayer_card_height</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">@dimen/prayer_card_margin</item>
        <item name="android:layout_marginEnd">@dimen/prayer_card_margin</item>
        <item name="cardBackgroundColor">?mySurface</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="PrayerScreen" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">35dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrayerCounter" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:background">?myCounter</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?myAccent</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="PrayerDelayTv" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize" tools:ignore="SpUsage">25dp</item>
        <item name="android:textColor">?myAccent</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MySpinnerItem" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/tajawal_regular</item>
        <item name="android:textColor">@color/text_M</item>
    </style>

    <style name="TajwalFontTv" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="ActionBarTajwal" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/tajawal_regular</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TajwalTab" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:colorBackground">?myMainBg</item>
        <item name="android:textColorSecondary">?myAccent</item>
        <item name="android:colorControlActivated">?myAccent</item>
        <item name="android:textColor">?myText</item>
        <item name="textColorAlertDialogListItem">?myText</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">?myMainBg</item>
        <item name="android:colorAccent">?attr/myPrimary</item>
        <item name="colorAccent">?myAccent</item>
        <item name="android:textColorPrimary">?myText</item>
        <item name="android:textColor">?myText</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

