<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Hidaya.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <!--<item name="android:background">@drawable/app_widget_background</item>-->
    </style>

    <style name="Widget.Hidaya.AppWidget.InnerView" parent="android:Widget">
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <!--<item name="android:background">@drawable/app_widget_inner_view_background</item>-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="PrayerPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/prayer_popup_show</item>
        <item name="android:windowExitAnimation">@anim/prayer_popup_hide</item>
    </style>

    <style name="RecitationPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/recitation_popup_show</item>
        <item name="android:windowExitAnimation">@anim/recitation_popup_hide</item>
    </style>

    <style name="Buttony" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
    </style>

</resources>