<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PrayerPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/prayer_popup_show</item>
        <item name="android:windowExitAnimation">@anim/prayer_popup_hide</item>
    </style>

    <style name="QuranSettingsPopupAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/quran_settings_popup_show</item>
        <item name="android:windowExitAnimation">@anim/quran_settings_popup_hide</item>
        <item name="android:activityOpenEnterAnimation">@anim/quran_settings_popup_show</item>
        <item name="android:activityOpenExitAnimation">@anim/quran_settings_popup_hide</item>
        <item name="android:activityCloseEnterAnimation">@anim/quran_settings_popup_show</item>
        <item name="android:activityCloseExitAnimation">@anim/quran_settings_popup_hide</item>
    </style>

    <style name="Buttony" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
        <item name="fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="RoundedPopupM" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/rounded_popup</item>
        <item name="myMainBg">@color/bg_M</item>
        <item name="myClick">@color/click_M</item>
        <item name="myLightClick">@color/ripple_M</item>
        <item name="myAccent">@color/accent_M</item>
    </style>

    <style name="RoundedPopupL" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/rounded_popup</item>
        <item name="android:textColorSecondary">?myAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?myAccent</item>
        <item name="colorAccent">?myAccent</item>
        <item name="myMainBg">@color/bg_L</item>
        <item name="myClick">@color/click_L</item>
        <item name="myLightClick">@color/ripple_L</item>
        <item name="myAccent">@color/accent_L</item>
    </style>

    <style name="MySpinnerItem" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/tajawal_regular</item>
        <item name="android:textColor">@color/text_M</item>
    </style>

    <style name="TajwalFontTv" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="ActionBarTajwal" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/tajawal_regular</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TajwalTab" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/tajawal_regular</item>
    </style>

</resources>