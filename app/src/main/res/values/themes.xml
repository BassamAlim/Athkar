<resources>

    <style name="MainAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="textAllCaps">false</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePicker</item>
        <item name="android:timePickerStyle">@style/MyTimePicker</item>
        <item name="materialTimePickerStyle">@style/MyTimePicker</item>
        <item name="materialTimePickerTheme">@style/MyTimePicker</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/bg_M</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <!--<item name="windowSplashScreenAnimationDuration">200</item>--> # Required for animated
        icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.HidayaM</item>
        # Required.
    </style>

    <!-- Base application theme. -->
    <style name="Theme.HidayaM" parent="MainAppTheme">
        <!-- Primary color -->
        <item name="colorPrimary">@color/primary_M</item>
        <item name="colorPrimaryVariant">@color/primary_M</item>
        <item name="colorOnPrimary">@color/primary_M</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/primary_M</item>
        <item name="android:textColorPrimary">@color/text_M</item>
        <item name="android:textColor">@color/text_M</item>
        <item name="colorAccent">@color/accent_M</item>
        <item name="titleTextColor">@color/white</item>
        <!-- My Special Theme -->
        <item name="myMainBg">@color/bg_M</item>
        <item name="myPrimary">@color/primary_M</item>
        <item name="myPrimaryDark">@color/primary_weak_M</item>
        <item name="myOnPrimary">@color/text_M</item>
        <item name="mySurface">@color/surface_M</item>
        <item name="mySurfaceDark">@color/surface_dark_M</item>
        <item name="myOnSurface">@color/on_surface_M</item>
        <item name="myAccent">@color/accent_M</item>
        <item name="myAccentDark">@color/accent_dark_M</item>
        <item name="myText">@color/text_M</item>
        <item name="mySpecialText">@color/white</item>
        <item name="myRipple">@color/ripple_M</item>
        <item name="myActiveOnPrimary">@color/accent_M</item>
        <item name="myActiveOnPrimaryDark">@color/accent_dark_M</item>
        <item name="myDialogBg">@color/primary_M</item>
        <item name="mySeparator">@color/grey</item>
        <item name="myShadow">@color/shadow_M</item>
    </style>

