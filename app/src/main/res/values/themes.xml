<resources>
    <!-- Base application theme. -->
    <style name="Theme.Hidaya" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="colorAccent">@color/accent_dark</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="QuranDarkTheme" parent="Theme.Hidaya">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="QuranLightTheme" parent="Theme.Hidaya">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Hidaya.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.Hidaya.AppWidgetContainer" parent="Theme.Hidaya.AppWidgetContainerParent" />

</resources>