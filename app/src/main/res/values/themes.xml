<resources>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/bg_M</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <!--<item name="windowSplashScreenAnimationDuration">200</item>--> # Required for animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.HidayaM</item>  # Required.
    </style>

    <!-- Base application theme. -->
    <style name="Theme.HidayaM" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bars_M</item>
        <item name="colorPrimaryVariant">@color/bars_M</item>
        <item name="colorOnPrimary">@color/bars_M</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_M</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/text_M</item>
        <item name="android:textColor">@color/text_M</item>
        <item name="colorAccent">@color/accent_M</item>
        <item name="titleTextColor">@color/white</item>
        <item name="spinnerDropDownItemStyle">@style/MySpinnerItem</item>
        <!-- My Special Theme -->
        <item name="myMainBg">@color/bg_M</item>
        <item name="myBars">@color/bars_M</item>
        <item name="myWeakBars">@color/weak_bars_M</item>
        <item name="mySurface">@color/surface_M</item>
        <item name="myLightSurface">@color/ripple_M</item>
        <item name="myAccent">@color/accent_M</item>
        <item name="myOtherAccent">@color/other_accent_M</item>
        <item name="myText">@color/text_M</item>
        <item name="mySpecialText">@color/white</item>
        <item name="myOnBars">@color/text_M</item>
        <item name="myCounter">@color/black</item>
        <item name="myActiveOnBar">@color/accent_M</item>
        <item name="myOtherActiveOnBar">@color/other_accent_M</item>
        <item name="myPopupsBg">@color/bars_M</item>
        <item name="mySeparator">@color/grey</item>
        <item name="myNavBar">@drawable/nav_bar_item_bg_m</item>
    </style>

    <style name="Theme.HidayaL" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bars_L</item>
        <item name="colorPrimaryVariant">@color/bars_L</item>
        <item name="colorOnPrimary">@color/bars_L</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bars_L</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/text_L</item>
        <item name="android:textColor">@color/text_L</item>
        <item name="colorAccent">@color/accent_L</item>
        <item name="titleTextColor">@color/text_M</item>
        <item name="spinnerDropDownItemStyle">@style/MySpinnerItem</item>
        <!-- My Special Theme -->
        <item name="myMainBg">@color/bg_L</item>
        <item name="myBars">@color/bars_L</item>
        <item name="myWeakBars">@color/weak_bars_L</item>
        <item name="mySurface">@color/surface_L</item>
        <item name="myLightSurface">@color/ripple_L</item>
        <item name="myAccent">@color/accent_L</item>
        <item name="myOtherAccent">@color/other_accent_L</item>
        <item name="myText">@color/text_L</item>
        <item name="mySpecialText">@color/black</item>
        <item name="myOnBars">@color/text_M</item>
        <item name="myCounter">@color/ripple_L</item>
        <item name="myActiveOnBar">@color/active_on_bar_L</item>
        <item name="myOtherActiveOnBar">@color/other_active_on_bar_L</item>
        <item name="myPopupsBg">@color/ripple_L</item>
        <item name="mySeparator">@color/black</item>
        <item name="myNavBar">@drawable/nav_bar_item_bg_l</item>
    </style>

    <style name="QuranM" parent="Theme.HidayaM">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="myQBg">@color/bars_M</item>
        <item name="myQBars">@color/bg_M</item>
        <item name="myLightSurface">@color/ripple_M</item>
        <item name="myQHighlight">@color/highlight_M</item>
        <item name="myQTrack">@color/track_M</item>
    </style>

    <style name="QuranL" parent="Theme.HidayaL">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="myQBg">@color/q_bg_L</item>
        <item name="myQBars">@color/bars_L</item>
        <item name="myLightSurface">@color/ripple_L</item>
        <item name="myQHighlight">@color/highlight_L</item>
        <item name="myQTrack">@color/track_L</item>
    </style>

    <style name="Theme.Hidaya.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

</resources>