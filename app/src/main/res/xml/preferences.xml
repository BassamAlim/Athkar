<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreferenceCompat
            app:key="@string/athan_enable_key"
            app:title="@string/athan_enable_title"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="@string/daily_page_key"
            app:title="@string/daily_page_enable_title"

            app:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/quran_header">

        <SeekBarPreference
            app:key="@string/quran_text_size_key"
            app:title="@string/quran_text_size_title"
            app:showSeekBarValue="true"
            app:min="20"
            android:max="50"
            app:defaultValue="30"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/alathkar_header">

        <SeekBarPreference
            app:key="@string/alathkar_text_size_key"
            app:title="@string/quran_text_size_title"
            app:showSeekBarValue="true"
            app:min="20"
            android:max="50"
            app:defaultValue="27"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

