<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreferenceCompat
            app:key="@string/morning_athkar_key"
            app:title="@string/morning_athkar_title"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="@string/evening_athkar_key"
            app:title="@string/evening_athkar_title"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="@string/daily_werd_key"
            app:title="@string/daily_page_enable_title"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="@string/friday_kahf_key"
            app:title="@string/friday_kahf_title"
            app:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/alathkar_header">

        <SeekBarPreference
            app:key="@string/alathkar_text_size_key"
            app:title="@string/text_size_title"
            app:showSeekBarValue="true"
            app:min="20"
            android:max="50"
            app:defaultValue="27"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>