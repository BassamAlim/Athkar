<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AlathkarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingBottom="75dp">

            <Button
                android:id="@+id/all_thikrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/button_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/all_thikrs"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/accent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/day_and_night"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:layout_marginEnd="@dimen/my_button_margin_end"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:drawableTop="@drawable/ic_day_and_night"
                    android:gravity="center|bottom"
                    android:text="@string/day_and_night_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/prayers"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:gravity="bottom|center"
                    android:text="@string/prayers_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    android:drawableTop="@drawable/ic_praying"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/my_linear_padding_top"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/quran"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:layout_marginEnd="@dimen/my_button_margin_end"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center|bottom"
                    android:drawableTop="@drawable/ic_closed_quran"
                    android:text="@string/quran_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/actions"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:drawableTop="@drawable/ic_actions"
                    android:gravity="center|bottom"
                    android:text="@string/actions_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/my_linear_padding_top"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/events"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:layout_marginEnd="@dimen/my_button_margin_end"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center|bottom"
                    android:drawableTop="@drawable/ic_events"
                    android:text="@string/events_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/emotions"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:drawableTop="@drawable/ic_emotion"
                    android:gravity="center|bottom"
                    android:text="@string/emotion_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/my_linear_padding_top"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/places"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:layout_marginEnd="@dimen/my_button_margin_end"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center|bottom"
                    android:drawableTop="@drawable/ic_going_out"
                    android:text="@string/places_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/more"
                    android:layout_width="@dimen/my_button_size"
                    android:layout_height="@dimen/my_button_size"
                    android:padding="@dimen/my_button_padding"
                    android:background="@drawable/rounded_corners"
                    android:drawableTop="@drawable/ic_duaa_moon"
                    android:gravity="center|bottom"
                    android:text="@string/more_thikrs"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/my_button_text_size"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>