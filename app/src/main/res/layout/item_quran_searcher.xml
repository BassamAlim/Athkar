<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingHorizontal="20dp"
            android:background="?myClick">

            <TextView
                android:id="@+id/sura_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?myText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/sura_name_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/page_num_tv" />

            <TextView
                android:id="@+id/sura_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?myText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/sura_num_tv"
                app:layout_constraintBottom_toTopOf="@id/aya_num_tv" />

            <TextView
                android:id="@+id/page_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?myText"
                app:layout_constraintTop_toBottomOf="@id/sura_num_tv"
                app:layout_constraintStart_toEndOf="@id/aya_num_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/aya_text_tv" />

            <TextView
                android:id="@+id/aya_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?myText"
                app:layout_constraintTop_toBottomOf="@id/sura_name_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/page_num_tv"
                app:layout_constraintBottom_toTopOf="@id/aya_text_tv" />

            <TextView
                android:id="@+id/aya_text_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="?myText"
                app:layout_constraintTop_toBottomOf="@id/aya_num_tv"
                app:layout_constraintBottom_toTopOf="@id/aya_tafseer_tv" />

            <TextView
                android:id="@+id/aya_tafseer_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?myText"
                app:layout_constraintTop_toBottomOf="@id/aya_text_tv"
                app:layout_constraintBottom_toTopOf="@id/goto_page" />

            <Button
                android:id="@+id/goto_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="18dp"
                android:paddingBottom="12dp"
                android:paddingHorizontal="20dp"
                android:elevation="10dp"
                android:gravity="center"
                android:background="@drawable/ripple_bar"
                android:text="@string/go_to_page"
                android:textSize="20sp"
                android:textColor="?myBarsText"
                app:layout_constraintTop_toBottomOf="@id/aya_tafseer_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>