<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?mySurface"
            android:paddingHorizontal="20dp"
            android:paddingTop="18dp">

            <TextView
                android:id="@+id/sura_name_tv"
                style="@style/MyTV"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="12dp"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/page_num_tv"
                app:layout_constraintBottom_toTopOf="@id/aya_num_tv" />

            <TextView
                android:id="@+id/page_num_tv"
                style="@style/MyTV"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="6dp"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/sura_name_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/aya_num_tv" />

            <TextView
                android:id="@+id/aya_num_tv"
                style="@style/MyTV"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="6dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/aya_text_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sura_name_tv" />

            <TextView
                android:id="@+id/aya_text_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="@font/uthmanic_hafs1_ver18"
                android:gravity="center"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@id/aya_tafseer_tv"
                app:layout_constraintTop_toBottomOf="@id/aya_num_tv" />

            <TextView
                android:id="@+id/aya_tafseer_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/goto_page"
                app:layout_constraintTop_toBottomOf="@id/aya_text_tv" />

            <Button
                android:id="@+id/goto_page"
                style="@style/MyBtn"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/ripple_rectangle"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:text="@string/go_to_page"
                android:textSize="20sp"
                android:textColor="?myAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aya_tafseer_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>