<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyRootView"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/clock_card"
                android:layout_width="match_parent"
                style="@style/MyCard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/telawat_time_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <bassamalim.hidaya.replacements.AnalogClockView
                        android:id="@+id/clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/clock_background_shadow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/prayer_name_tv"/>

                    <TextView
                        android:id="@+id/prayer_name_tv"
                        style="@style/MyTV"
                        android:layout_marginTop="5dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/clock"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/prayer_time_tv"/>

                    <TextView
                        android:id="@+id/prayer_time_tv"
                        style="@style/MyTV"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@id/prayer_name_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/remaining_time_tv"/>

                    <TextView
                        android:id="@+id/remaining_time_tv"
                        style="@style/MyTV"
                        android:layout_marginBottom="15dp"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@id/prayer_time_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/telawat_time_card"
                android:layout_width="match_parent"
                style="@style/MyCard"
                app:layout_constraintTop_toBottomOf="@id/clock_card"
                app:layout_constraintBottom_toTopOf="@id/quran_pages_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:id="@+id/telawat_time_title"
                        style="@style/MyTV"
                        android:text="@string/telawat_time_record_title"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/telawat_time_duration"
                        style="@style/MyTV"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/quran_pages_card"
                android:layout_width="match_parent"
                style="@style/MyCard"
                app:layout_constraintTop_toBottomOf="@id/telawat_time_card"
                app:layout_constraintBottom_toTopOf="@id/werd_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:id="@+id/quran_pages_title"
                        style="@style/MyTV"
                        android:text="@string/quran_pages_record_title"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/quran_pages_num"
                        style="@style/MyTV"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/werd_card"
                android:layout_width="match_parent"
                style="@style/MyCard"
                app:layout_constraintTop_toBottomOf="@id/quran_pages_card"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="30dp">

                    <TextView
                        android:id="@+id/werd_title"
                        style="@style/MyTV"
                        android:text="@string/today_werd"
                        android:textSize="22sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/werd_text"
                        style="@style/MyTV"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/werd_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/werd_iv" />

                    <Button
                        android:id="@+id/read_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/ripple_rectangle"
                        android:fontFamily="@font/tajawal_regular"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:text="@string/go_to_page"
                        android:textSize="18sp"
                        android:textColor="?myAccent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/werd_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/werd_title" />

                    <ImageView
                        android:id="@+id/werd_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check"
                        android:visibility="invisible"
                        android:contentDescription="@string/already_read_description"
                        app:layout_constraintTop_toBottomOf="@id/werd_text"
                        app:layout_constraintStart_toEndOf="@id/read_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>