<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="350dp"
    android:minHeight="250dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_gravity="center|bottom"
    android:gravity="center"
    android:backgroundTint="@color/secondary"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/popup_prayer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:text="@string/recitation_settings"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/choose_reciter"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/reciters_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stop_on_surah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/stop_on_surah_end"
        app:switchPadding="30dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stop_on_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/stop_on_page_end"
        app:switchPadding="27dp"/>

</LinearLayout>