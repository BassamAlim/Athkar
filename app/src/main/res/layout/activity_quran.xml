<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="?myQBars"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="?myBarsText"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/sura_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="?myBarsText"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/juz_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_gravity="end"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="?myBarsText"
            tools:ignore="SpUsage" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="?actionBarSize"
        android:background="?myQBg"
        app:layout_constraintTop_toBottomOf="@id/info_bar"
        app:layout_constraintEnd_toEndOf="parent">

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top|center">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:orientation="vertical"
                android:layout_gravity="top|center">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:orientation="vertical"
                android:layout_gravity="top|center">

            </LinearLayout>

        </ViewFlipper>

    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/quran_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="?myQBars"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="5dp"
            android:background="@drawable/ripple"
            android:src="@drawable/ic_bookmark"
            android:contentDescription="@string/bookmark_page_button" />

        <ImageButton
            android:id="@+id/next_ayah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple"
            android:src="@drawable/ic_aya_forward"
            android:contentDescription="@string/bookmark_page_button" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple"
            android:src="@drawable/ic_play_aya"
            android:contentDescription="@string/bookmark_page_button" />

        <ImageButton
            android:id="@+id/prev_ayah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple"
            android:src="@drawable/ic_aya_backward"
            android:contentDescription="@string/bookmark_page_button" />

        <ImageButton
            android:id="@+id/recitation_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:background="@drawable/ripple"
            android:src="@drawable/ic_preferences"
            android:contentDescription="@string/bookmark_page_button" />

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>