<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AthkarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?myMainBg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="75dp">

            <Button
                android:id="@+id/all_thikrs"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ripple_surface"
                android:elevation="10dp"
                android:fontFamily="@font/tajawal_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/all_thikrs"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/favorite_athkar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ripple_surface"
                android:elevation="10dp"
                android:fontFamily="@font/tajawal_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/favorite_athkar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/day_and_night"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_day_and_night"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/day_and_night_thikrs" />

                <Button
                    android:id="@+id/prayers"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_praying"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/prayers_thikrs" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/quran"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_closed_quran"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/quran_thikrs" />

                <Button
                    android:id="@+id/actions"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_actions"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/actions_thikrs" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/events"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_events"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/events_thikrs" />

                <Button
                    android:id="@+id/emotions"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_emotion"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/emotion_thikrs" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/places"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_going_out"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/places_thikrs" />

                <Button
                    android:id="@+id/more"
                    style="@style/Buttony"
                    android:background="@drawable/ripple_surface"
                    android:drawableTop="@drawable/ic_duaa_moon"
                    android:elevation="@dimen/buttony_elevation"
                    android:text="@string/more" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>