<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyRootView"
    android:padding="15dp"
    android:background="@drawable/rounded_corners_primary">

    <TextView
        android:id="@+id/title_tv"
        style="@style/MyTV"
        android:paddingBottom="16dp"
        android:text="@string/adjust_date"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="SpUsage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/day_back_btn"
        style="@style/MyImageBtn"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_left_arrow"
        android:contentDescription="@string/previous_day_button_description"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/date_tv"
        app:layout_constraintBottom_toTopOf="@id/cancel_btn"/>

    <TextView
        android:id="@+id/offset_tv"
        style="@style/MyTV"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="22dp"
        android:textColor="?myAccent"
        tools:ignore="SpUsage"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toEndOf="@id/day_back_btn"
        app:layout_constraintEnd_toStartOf="@id/day_forward_btn"
        app:layout_constraintBottom_toTopOf="@id/date_tv"/>

    <TextView
        android:id="@+id/date_tv"
        style="@style/MyTV"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:ignore="SpUsage"
        app:layout_constraintTop_toBottomOf="@id/offset_tv"
        app:layout_constraintStart_toEndOf="@id/day_back_btn"
        app:layout_constraintEnd_toStartOf="@id/day_forward_btn"
        app:layout_constraintBottom_toTopOf="@id/save_btn"/>

    <ImageButton
        android:id="@+id/day_forward_btn"
        style="@style/MyImageBtn"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_right_arrow"
        android:contentDescription="@string/next_day_button_description"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toEndOf="@id/date_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/save_btn"/>

    <Button
        android:id="@+id/cancel_btn"
        style="@style/MyBtn"
        android:layoutDirection="ltr"
        android:layout_marginTop="40dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/ripple_rectangle"
        android:text="@string/cancel"
        android:textColor="?myAccent"
        android:textSize="25dp"
        tools:ignore="SpUsage"
        app:layout_constraintTop_toBottomOf="@id/date_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/save_btn"
        style="@style/MyBtn"
        android:layoutDirection="ltr"
        android:layout_marginTop="40dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/ripple_rectangle"
        android:text="@string/save"
        android:textColor="?myAccent"
        android:textSize="25dp"
        tools:ignore="SpUsage"
        app:layout_constraintTop_toBottomOf="@id/date_tv"
        app:layout_constraintStart_toEndOf="@id/cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>