<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:background="@drawable/rounded_dialog"
    android:elevation="10dp"
    android:layoutDirection="ltr"
    android:minWidth="300dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tajawal_regular"
        android:textSize="23dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/tajawal_regular"
        android:verticalScrollbarPosition="left" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ripple_rectangle"
            android:fontFamily="@font/tajawal_regular"
            android:paddingHorizontal="10dp"
            android:text="@string/select_all"
            android:textColor="?attr/myAccent"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/unselect_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ripple_rectangle"
            android:fontFamily="@font/tajawal_regular"
            android:paddingHorizontal="10dp"
            android:text="@string/unselect_all"
            android:textColor="?attr/myAccent"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/finish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple_surface"
        android:fontFamily="@font/tajawal_regular"
        android:paddingVertical="10dp"
        android:text="@string/finish"
        android:textColor="?attr/myActiveOnPrimary"
        android:textSize="24dp"
        tools:ignore="SpUsage" />

</LinearLayout>