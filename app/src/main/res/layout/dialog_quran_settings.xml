<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="290dp"
    android:layout_gravity="center"
    android:background="?myMainBg"
    android:elevation="10dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".dialogs.QuranSettingsDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_method"
        android:paddingTop="5dp"
        android:paddingStart="12dp"
        android:gravity="start"
        android:textSize="18dp"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry,SpUsage" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/page_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="6dp"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/page_view"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <RadioButton
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="6dp"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="20dp"
            android:text="@string/list_view"
            tools:ignore="SpUsage" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/quran_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <Button
        android:id="@+id/execute_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_surface"
        android:fontFamily="@font/tajawal_regular"
        android:paddingVertical="16dp"
        android:text="@string/execute"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

</LinearLayout>