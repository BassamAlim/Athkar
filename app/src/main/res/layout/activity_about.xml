<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyRootView"
    tools:context="bassamalim.hidaya.activities.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        style="@style/MyTopBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/top_bar_title"
            style="@style/MyTopBarTv"
            android:text="@string/about" />

        <ImageButton
            android:id="@android:id/home"
            style="@style/MyBackBtn"
            android:contentDescription="@string/back_description" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/title_tv"
        style="@style/MyTV"
        android:layout_marginTop="20dp"
        android:text="@string/thanks"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/hidden_btns_space"
        app:layout_constraintTop_toBottomOf="@id/title_tv">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quran_source"
                style="@style/MyTV"
                android:padding="20dp"
                android:text="@string/quran_source"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?mySeparator" />

            <TextView
                android:id="@+id/tafseer_source"
                style="@style/MyTV"
                android:padding="20dp"
                android:text="@string/tafseer_source"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?mySeparator" />

            <TextView
                android:id="@+id/books_source"
                style="@style/MyTV"
                android:padding="20dp"
                android:text="@string/hadeeth_source"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?mySeparator" />

            <TextView
                android:id="@+id/athkar_source"
                style="@style/MyTV"
                android:padding="20dp"
                android:text="@string/athkar_source"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?mySeparator" />

            <TextView
                android:id="@+id/quiz_source"
                style="@style/MyTV"
                android:layout_marginBottom="30dp"
                android:padding="20dp"
                android:text="@string/quiz_source"
                android:textSize="22sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/hidden_btns_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_view">

        <Button
            android:id="@+id/rebuild_db"
            style="@style/MyBtn"
            android:layout_marginVertical="5dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:text="@string/rebuild_database"
            android:textColor="?myAccent"
            android:textSize="20dp"
            android:visibility="gone"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/drive_update"
            style="@style/MyBtn"
            android:layout_marginVertical="5dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:text="@string/quick_update"
            android:textColor="?myAccent"
            android:textSize="20dp"
            android:visibility="gone"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/last_update"
            style="@style/MyTV"
            android:layout_marginBottom="30dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textSize="18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>