<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?myMainBg"
    tools:context="bassamalim.hidaya.activities.AboutActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/thanks"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/quran_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:text="@string/quran_source"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tafseer_source" />

    <TextView
        android:id="@+id/tafseer_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:text="@string/tafseer_source"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/quran_source"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rebuild_db" />

    <Button
        android:id="@+id/rebuild_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-20dp"
        android:layout_marginHorizontal="40dp"
        android:paddingVertical="15dp"
        android:elevation="10dp"
        android:background="@drawable/ripple_click"
        android:text="@string/rebuild_database"
        android:textSize="20dp"
        android:textColor="?myAccent"
        tools:ignore="SpUsage"
        app:layout_constraintTop_toBottomOf="@id/tafseer_source"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/drive_update"/>

    <Button
        android:id="@+id/drive_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:paddingVertical="15dp"
        android:elevation="10dp"
        android:background="@drawable/ripple_click"
        android:text="@string/quick_update"
        android:textSize="20dp"
        android:textColor="?myAccent"
        tools:ignore="SpUsage"
        app:layout_constraintTop_toBottomOf="@id/rebuild_db"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>