<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyRootView"
    tools:context=".activities.TvActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        style="@style/MyTopBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/top_bar_title"
            style="@style/MyTopBarTv"
            android:text="@string/tv_channels" />

        <ImageButton
            android:id="@android:id/home"
            style="@style/MyBackBtn"
            android:contentDescription="@string/back_description" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/ytPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <Button
        android:id="@+id/quran_btn"
        style="@style/MyBtn"
        android:paddingStart="30dp"
        android:paddingEnd="-20dp"
        android:drawablePadding="30dp"
        android:drawableEnd="@mipmap/ic_quran_channel"
        android:text="@string/quran_channel"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/sunnah_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ytPlayer" />

    <Button
        android:id="@+id/sunnah_btn"
        style="@style/MyBtn"
        android:paddingStart="30dp"
        android:paddingEnd="-20dp"
        android:drawablePadding="30dp"
        android:drawableEnd="@mipmap/ic_sunnah_channel"
        android:text="@string/sunnah_channel"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quran_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>