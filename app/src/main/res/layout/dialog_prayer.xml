<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="250dp"
    android:elevation="10dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_dialog_primary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prayer_name_tv"
        style="@style/MyTV"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:textSize="23dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <RadioGroup
        android:id="@+id/prayer_alert_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:checkedButton="@id/notify_rb"
        android:gravity="center"
        android:minHeight="255dp">

        <RadioButton
            android:id="@+id/athan_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_speaker"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/athan_speaker"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <RadioButton
            android:id="@+id/notify_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_sound"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/enable_notification"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <RadioButton
            android:id="@+id/silent_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_silent"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/silent_notification"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <RadioButton
            android:id="@+id/disable_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_block"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/disable_notification"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/seekbar_title_tv"
            style="@style/MyTV"
            android:layout_marginBottom="10dp"
            android:text="@string/adjust_prayer_notification_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/seekbar_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/seekbar_tv"
            style="@style/MyTV"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/seekbar_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <SeekBar
        android:id="@+id/time_offset_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="60"
        android:progress="30"
        android:progressTint="@android:color/transparent"
        android:thumbTint="?myAccent" />

</LinearLayout>