<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_dialog_primary"
    android:elevation="10dp"
    android:minWidth="250dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prayer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/tajawal_regular"
        android:textSize="23dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <RadioGroup
        android:id="@+id/prayer_alert_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:checkedButton="@id/notify_rb"
        android:gravity="center"
        android:minHeight="255dp">

        <RadioButton
            android:id="@+id/athan_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_speaker"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/athan_speaker"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <RadioButton
            android:id="@+id/notify_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_sound"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/enable_notification"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <RadioButton
            android:id="@+id/silent_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_silent"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/silent_notification"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <RadioButton
            android:id="@+id/disable_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_disabled"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="@string/disable_notification"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/adjust_prayer_notification_time" />

        <Spinner
            android:id="@+id/time_setting_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="?attr/myPrimary" />

    </LinearLayout>

</LinearLayout>