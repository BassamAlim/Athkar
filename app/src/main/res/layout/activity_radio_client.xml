<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyRootView"
    tools:context=".activities.RadioClient">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        style="@style/MyTopBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/top_bar_title"
            style="@style/MyTopBarTv"
            android:text="@string/quran_radio" />

        <ImageButton
            android:id="@android:id/home"
            style="@style/MyBackBtn"
            android:contentDescription="@string/back_description" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        style="@style/MyTV"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="@string/holy_quran_radio"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/state_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <FrameLayout
        android:id="@+id/state_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <ImageButton
            android:id="@+id/radio_pp_btn"
            style="@style/MyImageBtn"
            android:padding="20dp"
            android:contentDescription="@string/play_pause_btn_description"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/buffering_circle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:indeterminate="true"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>