<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyRootView"
    tools:context=".activities.QiblaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        style="@style/MyTopBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/top_bar_title"
            style="@style/MyTopBarTv"
            android:text="@string/qibla" />

        <ImageButton
            android:id="@android:id/home"
            style="@style/MyBackBtn"
            android:contentDescription="@string/back_description" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/qibla_view_description"
        android:paddingHorizontal="10dp"
        android:src="@drawable/compass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <ImageView
        android:id="@+id/qibla_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:contentDescription="@string/qibla_view_description"
        android:src="@drawable/qibla_pointer"
        app:layout_constraintBottom_toBottomOf="@id/compass"
        app:layout_constraintEnd_toEndOf="@id/compass"
        app:layout_constraintStart_toStartOf="@id/compass"
        app:layout_constraintTop_toTopOf="@id/compass" />

    <ImageView
        android:id="@+id/kaaba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/qibla_view_description"
        android:src="@drawable/ic_qibla_kaaba"
        app:layout_constraintBottom_toBottomOf="@id/compass"
        app:layout_constraintEnd_toEndOf="@id/compass"
        app:layout_constraintStart_toStartOf="@id/compass"
        app:layout_constraintTop_toTopOf="@id/compass" />

    <LinearLayout
        android:id="@+id/accuracy_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/distance_tv"
        app:layout_constraintTop_toBottomOf="@id/compass">

        <TextView
            android:id="@+id/accuracy_text"
            style="@style/MyTV"
            android:paddingHorizontal="20dp"
            android:textColor="?myAccent"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/accuracy_indicator"
            style="@style/MyImageBtn"
            android:contentDescription="@string/accuracy_indicator_description" />

    </LinearLayout>

    <TextView
        android:id="@+id/distance_tv"
        style="@style/MyTV"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="@string/distance_to_kaaba"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/accuracy_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/bingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/bingo_view_description"
        android:src="@drawable/ic_check"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/compass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>