<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="350dp"
    android:minHeight="250dp"
    android:layoutDirection="rtl"
    android:elevation="10dp"
    android:orientation="vertical"
    android:layout_gravity="center|bottom"
    android:gravity="center"
    android:backgroundTint="@color/bg"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/popup_prayer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recitation_settings"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/choose_reciter"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/reciters_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/aya_repeat"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="45dp">

        <Button
            android:id="@+id/repeat_once"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="-100dp"
            android:background="@drawable/ripple_s"
            android:text="@string/no_repeat"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/repeat_forever"/>

        <Button
            android:id="@+id/repeat_twice"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="-100dp"
            android:background="@drawable/ripple_s"
            android:text="@string/two_times"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"/>

        <Button
            android:id="@+id/repeat_three"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="-100dp"
            android:background="@drawable/ripple_s"
            android:text="@string/three_times"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"/>

        <Button
            android:id="@+id/repeat_forever"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="-100dp"
            android:background="@drawable/ripple_s"
            android:text="@string/no_stop"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stop_on_surah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:checked="false"
        android:text="@string/stop_on_surah_end"
        app:switchPadding="30dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stop_on_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/stop_on_page_end"
        app:switchPadding="27dp"/>

</LinearLayout>