<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:background="@color/dark_bg"
    tools:context=".fragments.PrayersFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/fajr_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prayer_card_height"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="@dimen/prayer_card_margin"
        app:cardBackgroundColor="@color/dark_secondary"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shorouq_card">

        <TextView
            android:id="@+id/fajr_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_gravity="start|center"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/fajr_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:background="@color/black"
            android:textColor="@color/dark_accent"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/fajr_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_sound"
            android:contentDescription="@string/notification_image_description" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/shorouq_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prayer_card_height"
        android:layout_marginHorizontal="@dimen/prayer_card_margin"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/dark_secondary"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toBottomOf="@id/fajr_card"
        app:layout_constraintBottom_toTopOf="@id/duhr_card">

        <TextView
            android:id="@+id/shorouq_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center|start"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/shorouq_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:background="@color/black"
            android:textColor="@color/dark_accent"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/shorouq_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_disabled"
            android:contentDescription="@string/notification_image_description" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/duhr_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prayer_card_height"
        android:layout_marginHorizontal="@dimen/prayer_card_margin"
        app:cardBackgroundColor="@color/dark_secondary"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toBottomOf="@id/shorouq_card"
        app:layout_constraintBottom_toTopOf="@id/asr_card">

        <TextView
            android:id="@+id/duhr_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center|start"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/duhr_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:background="@color/black"
            android:textColor="@color/dark_accent"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/duhr_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_sound"
            android:contentDescription="@string/notification_image_description" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/asr_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prayer_card_height"
        android:layout_marginHorizontal="@dimen/prayer_card_margin"
        app:cardBackgroundColor="@color/dark_secondary"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toBottomOf="@id/duhr_card"
        app:layout_constraintBottom_toTopOf="@id/maghrib_card">

        <TextView
            android:id="@+id/asr_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center|start"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/asr_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:background="@color/black"
            android:textColor="@color/dark_accent"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/asr_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_sound"
            android:contentDescription="@string/notification_image_description" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/maghrib_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prayer_card_height"
        android:layout_marginHorizontal="@dimen/prayer_card_margin"
        app:cardBackgroundColor="@color/dark_secondary"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toBottomOf="@id/asr_card"
        app:layout_constraintBottom_toTopOf="@id/ishaa_card">

        <TextView
            android:id="@+id/maghrib_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center|start"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/maghrib_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:background="@color/black"
            android:textColor="@color/dark_accent"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/maghrib_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_sound"
            android:contentDescription="@string/notification_image_description" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ishaa_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prayer_card_height"
        android:layout_marginHorizontal="@dimen/prayer_card_margin"
        app:cardBackgroundColor="@color/dark_secondary"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toBottomOf="@id/maghrib_card"
        app:layout_constraintBottom_toTopOf="@id/day_selector">

        <TextView
            android:id="@+id/ishaa_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center|start"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/ishaa_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:background="@color/black"
            android:textColor="@color/dark_accent"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/ishaa_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_sound"
            android:contentDescription="@string/notification_image_description" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/day_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        android:backgroundTint="@color/dark_secondary"
        app:layout_constraintTop_toBottomOf="@id/ishaa_card"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/previous_day_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:backgroundTint="@color/dark_secondary"
            android:src="@drawable/ic_right_arrow"
            android:contentDescription="@string/previous_day_button_description"/>

        <TextView
            android:id="@+id/day_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/today"
            android:textSize="28dp"
            tools:ignore="SpUsage" />

        <ImageButton
            android:id="@+id/next_day_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:backgroundTint="@color/dark_secondary"
            android:src="@drawable/ic_left_arrow"
            android:contentDescription="@string/next_day_button_description"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>