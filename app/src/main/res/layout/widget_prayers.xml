<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Hidaya.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/prayers_widget_bg"
    android:theme="@style/Theme.Hidaya.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_fajr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="5dp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/prayers_widget_inner_view_bg"
            android:textSize="20dp"
            tools:ignore="SpUsage"
            style="@style/Widget.Hidaya.AppWidget.InnerView"/>

        <TextView
            android:id="@+id/widget_duhr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="5dp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/prayers_widget_inner_view_bg"
            android:textSize="20dp"
            tools:ignore="SpUsage"
            style="@style/Widget.Hidaya.AppWidget.InnerView"/>

        <TextView
            android:id="@+id/widget_asr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="5dp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/prayers_widget_inner_view_bg"
            android:textSize="20dp"
            tools:ignore="SpUsage"
            style="@style/Widget.Hidaya.AppWidget.InnerView"/>

        <TextView
            android:id="@+id/widget_maghrib"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="5dp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/prayers_widget_inner_view_bg"
            android:textSize="20dp"
            tools:ignore="SpUsage"
            style="@style/Widget.Hidaya.AppWidget.InnerView"/>

        <TextView
            android:id="@+id/widget_ishaa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/prayers_widget_inner_view_bg"
            android:textSize="20dp"
            tools:ignore="SpUsage"
            style="@style/Widget.Hidaya.AppWidget.InnerView"/>

    </LinearLayout>

</RelativeLayout>