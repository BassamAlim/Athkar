<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyRootView"
    tools:context=".screens.TelawatFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        style="@style/MySearchView"
        android:layout_width="wrap_content"
        app:defaultQueryHint="@string/reciters_hint"
        app:layout_constraintEnd_toStartOf="@id/filter_ib"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/filter_ib"
        style="@style/MyImageBtn"
        android:layout_marginTop="5dp"
        android:background="@drawable/ripple_circle"
        android:src="@drawable/ic_filter"
        android:contentDescription="@string/filter_search_description"
        app:layout_constraintBottom_toTopOf="@id/recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_view"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        style="@style/MyRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        tools:ignore="MissingConstraints">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>