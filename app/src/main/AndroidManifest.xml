<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bassamalim.hidaya">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HidayaM">
        <activity
            android:name=".activities.DateConverter"
            android:exported="false" />
        <activity
            android:name=".activities.Splash"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.QuranSearcherActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TelawatSuarCollectionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.QuizResultActivity"
            android:exported="false" />
        <activity
            android:name=".activities.QuizLobbyActivity"
            android:exported="false" />
        <activity
            android:name=".activities.QuizActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FeaturesGuide"
            android:exported="false" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AlathkarListActivity"
            android:exported="true"
            android:label="@string/title_alathkar" />
        <activity
            android:name=".activities.Settings"
            android:exported="true"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.AthkarViewer"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.QuranActivity"
            android:exported="true"
            android:theme="@style/QuranM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TvActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AboutActivity" />
        <activity
            android:name=".activities.TelawatClient"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.TelawatCollectionActivity"
            android:label="تلاوات" />
        <activity
            android:name=".popups.QuranSettingsPopup"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".activities.RadioClient"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.HadeethSearcher"
            android:exported="false" />
        <activity
            android:name=".activities.HadeethChaptersCollectionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.HadeethViewer"
            android:exported="false" />
        <activity
            android:name=".activities.HadeethBooks"
            android:exported="false" />

        <receiver android:name=".receivers.NotificationReceiver" />
        <receiver android:name=".receivers.DailyUpdateReceiver" />
        <receiver
            android:name=".receivers.DeviceBootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".other.PrayersWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/prayers_widget_info" />
        </receiver>
        <receiver
            android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.AthanService"
            android:enabled="true"
            android:excludeFromRecents="true"
            android:foregroundServiceType="mediaPlayback"
            android:stopWithTask="false" />
        <service
            android:name=".services.TelawatService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
        <service
            android:name=".services.RadioService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
    </application>

</manifest>